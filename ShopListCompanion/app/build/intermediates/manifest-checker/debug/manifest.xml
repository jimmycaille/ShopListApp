<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shoplistcompanion.caillej.jcinformatics.ch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- for settings -->
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="shoplistcompanion.caillej.jcinformatics.ch.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="shoplistcompanion.caillej.jcinformatics.ch.DeviceActivity"
            android:label="@string/app_name" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="shoplistcompanion.caillej.jcinformatics.ch.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>